<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%=  topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <%= topic.good_num %>
            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id,check: true), method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon-white' %>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id,check: false), method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon-red' %>
              <% end %>
            <% end %>
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p>
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
